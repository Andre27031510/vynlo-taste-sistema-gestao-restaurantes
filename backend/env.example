# ========================================
# VYNLO TASTE - VARIÁVEIS DE PRODUÇÃO
# ========================================
# Copie este arquivo para .env e preencha os valores

# ========================================
# BANCO DE DADOS
# ========================================
DATABASE_URL=jdbc:postgresql://localhost:5432/vynlotaste
DB_USER=postgres
DB_PASSWORD=sua_senha_segura_aqui

# ========================================
# REDIS
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=sua_senha_redis_aqui
REDIS_DATABASE=0

# ========================================
# FIREBASE
# ========================================
FIREBASE_PROJECT_ID=seu-projeto-firebase
FIREBASE_PRIVATE_KEY_ID=sua_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSua chave privada aqui\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@seu-projeto.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=seu_client_id
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40seu-projeto.iam.gserviceaccount.com

# ========================================
# JWT
# ========================================
JWT_SECRET=sua_chave_jwt_super_secreta_e_longa_aqui_minimo_256_bits

# ========================================
# SERVIDOR
# ========================================
SERVER_PORT=8080

# ========================================
# CORS
# ========================================
CORS_ALLOWED_ORIGINS=https://vynlotaste.com,https://app.vynlotaste.com

# ========================================
# LOGS
# ========================================
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/vynlo-taste-prod.log

# ========================================
# MONITORAMENTO
# ========================================
PROMETHEUS_ENABLED=true
ACTUATOR_ENABLED=true

# ========================================
# SEGURANÇA
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_AUTH=10
RATE_LIMIT_API=1000

# ========================================
# PERFORMANCE
# ========================================
DB_POOL_MAX_SIZE=20
DB_POOL_MIN_IDLE=5
REDIS_POOL_MAX_ACTIVE=20
REDIS_POOL_MAX_IDLE=10

# ========================================
# BACKUP
# ========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * * # Todos os dias às 2h da manhã
BACKUP_RETENTION_DAYS=30

# ========================================
# ALERTAS
# ========================================
ALERTS_ENABLED=true
ALERTS_EMAIL=admin@vynlotaste.com
ALERTS_SLACK_WEBHOOK=https://hooks.slack.com/services/xxx/yyy/zzz

# ========================================
# AMBIENTE
# ========================================
SPRING_PROFILES_ACTIVE=prod
NODE_ENV=production

# ========================================
# EXEMPLO DE USO:
# ========================================
# 1. Copie este arquivo para .env
# 2. Preencha todas as variáveis
# 3. Execute: source .env
# 4. Ou use: export $(cat .env | xargs)


